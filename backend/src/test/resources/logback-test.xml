<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml" />

    <!-- Mostrar m치s detalles sobre Spring Boot -->
    <logger name="org.springframework" level="INFO" />

    <!-- Ver m치s detalles sobre el contexto de prueba -->
    <logger name="org.springframework.test.context" level="DEBUG" />

    <!-- Mostrar informaci칩n de la capa de repositorios -->
    <logger name="org.springframework.data.jpa.repository" level="DEBUG" />

